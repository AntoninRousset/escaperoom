tab-nav {
  position: fixed;
  left: 0;
  bottom: 0px;
  top: 42px;
  padding: 0;
  padding-top: 7px;
  border-right: 1px solid #ccc;
  width: 180px;
  overflow-x: visible; /* for the selected tab arrow */
  overflow-y: scroll;
  scrollbar-width: none;
}

tab-nav > .screen {
  display: flex;
  flex-flow: column nowrap;
  padding: 0px;
}

tab-nav .screen[name='main'] > div {
  width: 100%;
  flex: 1;
  padding: 0px;
  margin: 0px;
}

/* Alternative style
tab-nav h1 {
  background: #e8e8e8;
  border-bottom: 1px solid #bbb;
  border-top: 1px solid #bbb;
  font-size: 16px;
  margin: 0;
  flex: 1;
  padding: 6px 12px;
  text-align: left;
}
*/

tab-nav a {
  flex: 1;
  padding: 10px 20px;
  text-decoration: none;
  display: flex;
  align-items: center;
  color: #666;
}

tab-nav a svg {
  fill: #aaa;
  margin: 0px 16px 0px 0px;
  width: 21px;
}

tab-nav a p {
  margin: 0px;
}

tab-nav a:hover {
  color: var(--active-color);
}

tab-nav a:hover svg {
  fill: var(--active-color);
}

tab-nav a[selected] {
  background: var(--active-color);
  border-color: rgba(0, 0, 0, 0.1);
  color: white;
}

tab-nav a[selected]:hover {
  color: white;
}

tab-nav a[selected] svg {
  fill: white;
}

tab-nav a[selected]::after {
  content: "";
  border: 12px solid transparent;
  border-right-color: var(--light-color);
  position: absolute;
  right: 0px;
  transform: translateX(1px);
}

tab-nav h1 {
  border-bottom: 1px solid #bbb;
  font-size: 16px;
  margin: 0;
  flex: 1;
  padding: 6px 12px;
  text-align: left;
  color: #888;
  margin: 10px 8px 0px 8px;
}

tab-content {
  display: block;
  margin-left: 180px;
  padding: 24px 4vw;
}

@media only screen and (max-width: 800px) {

  tab-nav {
    width: 52px;
  }

  tab-nav[loading] loading-animation {
    transform: rotateZ(90deg);
  }

  tab-nav a {
    padding: 16px;
    justify-content: center;
  }

  tab-nav a p {
    display: none;
  }

  tab-nav a svg {
    margin: 0px;
    width: 20px;
    max-width: 24px;
  }

}


@media only screen and (max-width: 500px) {
  
  tab-nav {
    width: auto;
    position: relative;
    top: 0px;
    bottom: 0px;
    padding: 0px;
    border-right: none;
    border-bottom: 1px solid #bbb;
    min-height: 52px;
  }

  tab-nav .content {
    flex: 1;
    display: flex;
    flex-flow: row;
  }

  tab-nav .content > * {
    flex: 1;
  }

  tab-nav[loading] loading-animation {
    transform: rotateZ(0deg);
  }

  tab-nav a {
  }
  
  tab-nav a svg {
    width: 100%; 
    max-width: 20px;
    min-width: 10px;
  }

  tab-nav a[selected]::after {
    right: auto;
    bottom: 0px;
    transform: translateY(1px);
    border-right-color: transparent;
    border-bottom-color: var(--light-color);
  }

}
